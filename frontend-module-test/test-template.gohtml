<!doctype html>
<html lang='en'>
{{ $vue := . }}
    <head>
        <meta charset='utf-8'>
        <title>Sample Vite-Go Page</title>
        {{ if $vue }}
          {{ $vue.RenderTags }}
        {{ end }}
    </head>
    <body>
        {{ if $vue }}
          {{ $id := "app" }}
          {{ if eq $vue.Platform "react" }}
            {{ $id = "root" }}
          {{ end }}
          <div id="{{ $id }}"></div>
        {{ else }}
          <div id="app"></div>
        {{ end }}
    </body>
</html>